<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:int="http://www.springframework.org/schema/integration"
	xmlns:int-http="http://www.springframework.org/schema/integration/http"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd
		http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration-4.1.xsd
		http://www.springframework.org/schema/integration/http http://www.springframework.org/schema/integration/http/spring-integration-http-4.1.xsd">
	
	<int:channel id="responseChannelInstagramAuthentication"/>
	<int:channel id="requestChannelInstagramAuthentication"/>
	
	<int-http:inbound-gateway request-channel="requestChannelInstagramAuthentication"
		reply-channel="responseChannelInstagramAuthentication"
		supported-methods="GET" 
		path="/api/secret/instagram{authentication}">
	</int-http:inbound-gateway>
	<int:service-activator ref="instagramAuthenticationEndpoint" method="getAuthentication" input-channel="requestChannelInstagramAuthentication" output-channel="responseChannelInstagramAuthentication"/>
		
	<int:channel id="responseChannelFacebookAuthentication"/>
	<int:channel id="requestChannelFacebookAuthentication"/>
	
	<int-http:inbound-gateway request-channel="requestChannelFacebookAuthentication"
		reply-channel="responseChannelFacebookAuthentication"
		supported-methods="GET" 
		path="/api/secret/facebook{authentication}">
	</int-http:inbound-gateway>
	<int:service-activator ref="facebookAuthenticationEndpoint" method="getAuthentication" input-channel="requestChannelFacebookAuthentication" output-channel="responseChannelFacebookAuthentication"/>
		
</beans>