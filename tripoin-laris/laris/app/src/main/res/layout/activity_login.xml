<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ic_intro_1"
    android:layout_gravity="center"
    android:id="@+id/linearBackground"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_info_18dp"/>
    </RelativeLayout>
    <ImageView
        android:layout_marginTop="130dp"
        android:layout_width="200dp"
        android:layout_height="170dp"
        android:src="@drawable/login_logo"
        android:id="@+id/imgLogo">
    </ImageView>
    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/txt_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:gravity="center"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:background="@drawable/custom_edit_text_password"
            android:hint="\u2022\u2022\u2022\u2022\u2022" />
        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/btLogin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bt_login_transparant_bordered"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="@string/login"/>
        <EditText
            android:id="@+id/txt_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:singleLine="true"
            android:visibility="invisible"
            android:hint="@string/password" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/learn_about"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</LinearLayout>
